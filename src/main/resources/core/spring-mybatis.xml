<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath*:config/jdbc.properties"/>


    <!--2:数据库的连接池-->
    <bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource">
        <!--配置连接池属性-->
        <property name="driverClass" value="${driver}"/>
        <property name="jdbcUrl" value="${url}"/>
        <property name="user" value="${jdbc.username}"/>
        <property name="password" value="${password}"/>

        <!--c3p0连接池的私有属性-->
        <property name="maxPoolSize" value="30"/>
        <property name="minPoolSize" value="10"/>
        <!--关闭连接不自动commit,默认为false-->
        <property name="autoCommitOnClose" value="false"/>
        <!--设置获取连接超时的时间，默认为0 ，则表示无限等待-->
        <property name="checkoutTimeout" value="60000"/>
        <!--当获取连接失败的时候重试的次数-->
        <property name="acquireRetryAttempts" value="2"/>
    </bean>

    <!--3:配置SqlSessionFactory对象-->
    <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <!--注入数据库连接池-->
        <property name="dataSource" ref="dataSource"/>
        <!--扫描entity包，使用别名 扫描多个包时可以用 ; 隔开-->
        <property name="typeAliasesPackage" value="myPro.bean.seller,myPro.bean.sys"/>
        <!--<property name="configLocation" value="classpath:config/mybatis-config.xml" />-->
        <property name="mapperLocations" value="classpath:mapper/*/*.xml"/>
    </bean>

    <!--4:配置扫描DAO接口包，动态实现DAO接口，并注入到spring容器中-->
    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <!--给出扫描DAO接口包-->
        <property name="basePackage" value="myPro.dao.seller,myPro.dao.sys"/>
        <!--注入sqlSessionFactory-->
        <property name="sqlSessionFactoryBeanName" value="sqlSessionFactory"/>
    </bean>

    <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSource" />
    </bean>

    <context:component-scan base-package="myPro">
        <context:exclude-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
    </context:component-scan>

</beans>