<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="myPro.dao.seller.SellerCompletInfoDao">

    <resultMap id="goodsMap" type="myPro.bean.seller.Goods">
        <id column="goods_id" property="goods_id"/>
        <result column="store_id" property="store_id"/>
        <result column="goods_name" property="goods_name"/>
        <result column="goods_origin" property="goods_origin"/>
        <result column="goods_price" property="goods_price"/>
        <result column="goods_price_now" property="goods_price_now"/>
        <result column="goods_count" property="goods_count"/>
        <result column="goods_tags" property="goods_tags"/>
        <result column="goods_classify" property="goods_classify"/>
        <result column="goods_imgs" property="goods_imgs"/>
        <result column="goods_desc" property="goods_desc"/>
        <result column="goods_comment" property="goods_comment"/>
    </resultMap>
    
    <update id="completInfo" parameterType="myPro.bean.seller.Store">
        UPDATE store_tab SET
            store_name=#{store_name,jdbcType=VARCHAR},
            store_tags=#{store_tags,jdbcType=VARCHAR},
            store_head=#{store_head,jdbcType=VARCHAR},
            store_address=#{store_address,jdbcType=VARCHAR},
            store_intro=#{store_intro,jdbcType=VARCHAR}
        WHERE store_id = #{store_id,jdbcType=INTEGER}
    </update>

    <insert id="shelves" parameterType="myPro.bean.seller.Goods">
        INSERT into goods_tab
        (store_id,goods_name,goods_price_now,goods_price,goods_count,goods_origin,goods_classify,goods_imgs,goods_desc)
        VALUES(#{store_id,jdbcType=INTEGER},#{goods_name,jdbcType=VARCHAR},#{goods_price_now,jdbcType=FLOAT}
        ,#{goods_price,jdbcType=FLOAT},#{goods_count,jdbcType=INTEGER},#{goods_origin,jdbcType=VARCHAR}
        ,#{goods_classify,jdbcType=VARCHAR},#{goods_imgs,jdbcType=VARCHAR},#{goods_desc,jdbcType=VARCHAR})
    </insert>
    
    <select id="getGoodsList" resultMap="goodsMap">
        SELECT * FROM goods_tab WHERE store_id = #{store_id}
    </select>

    <select id="findGoodsList" resultMap="goodsMap">
        SELECT * FROM goods_tab
        <where>
            store_id=#{store_id}
            <choose>
                <when test="content!=''">
                    AND  goods_name = #{content}
                </when>
                <otherwise>

                </otherwise>
            </choose>
            <choose>
                <when test="type!=5">
                    AND goods_classify = #{type}
                </when>
                <otherwise>

                </otherwise>
            </choose>
            <choose>
                <when test="page!=-1">
                    limit #{page}
                </when>
                <otherwise></otherwise>
            </choose>
            <choose>
                <when test="limit!=-1">
                    ,#{limit}
                </when>
                <otherwise></otherwise>
            </choose>
        </where>
    </select>

    <select id="hotSaleList" resultMap="goodsMap">
        SELECT * FROM goods_tab WHERE store_id = #{store_id}  ORDER BY goods_sale_count DESC ;
    </select>

    <select id="moneySaleList" resultMap="goodsMap">
        SELECT * FROM goods_tab WHERE store_id = #{store_id}  ORDER BY (goods_sale_count*goods_price_now) DESC ;
    </select>

    <select id="modifyGoods" resultMap="goodsMap">
        SELECT * FROM goods_tab WHERE goods_id = #{goods_id}
    </select>

    <update id="modifyBaseGood" parameterType="myPro.bean.seller.Goods">
        UPDATE  goods_tab
        SET goods_name = #{goods_name,jdbcType=VARCHAR},
            goods_price = #{goods_price,jdbcType=FLOAT},
            goods_price_now = #{goods_price_now,jdbcType=FLOAT},
            goods_count = #{goods_count,jdbcType=INTEGER},
            goods_origin = #{goods_origin,jdbcType=VARCHAR} ,
            goods_classify = #{goods_classify,jdbcType=VARCHAR},
            goods_desc = #{goods_desc,jdbcType=VARCHAR}
        WHERE goods_id = #{goods_id}
    </update>

    <update id="modifyPicGood">
        UPDATE  goods_tab SET goods_imgs=#{imgJson,jdbcType=VARCHAR} WHERE goods_id = #{goods_id}
    </update>

    <delete id="deleteGood">
        DELETE FROM goods_tab WHERE goods_id = #{goods_id,jdbcType=INTEGER}
    </delete>
</mapper>